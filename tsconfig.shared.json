{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"esModuleInterop": true,
		"lib": [
			"es6"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"jsx": "react",
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es5"
	},
	"include": [
		"packages/**/*",
		"./*"
	],
	"exclude": [
		"node_modules"
	]
}
